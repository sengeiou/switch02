<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contorller.LoginActivity"
    android:background="@color/bgColor">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bgColor">


        <ImageView
            android:id="@+id/iconIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_icon"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logo"
            android:layout_marginLeft="@dimen/login_margin_parallel"
            android:layout_marginTop="@dimen/login_margin_each_model"
            android:textColor="@color/rayblue"
            android:textSize="26sp"/>


        <TextView
            android:id="@+id/countryTipTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country"
            android:layout_marginLeft="@dimen/login_margin_parallel"
            android:layout_marginTop="@dimen/login_margin_each_model"
            android:textSize="@dimen/login_text_size"
            android:textColor="@color/rayblue"/>

        <RelativeLayout
            android:id="@+id/countryRl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_height"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/login_margin_parallel"
            android:layout_marginLeft="@dimen/login_margin_parallel">

            <TextView
                android:id="@+id/countryTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/china"
                android:layout_centerVertical="true"
                android:textSize="@dimen/login_text_size"
                android:textColor="@color/rayblue" />

            <TextView
                android:id="@+id/countryCodeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/login_text_size"
                android:textColor="@color/rayblue"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/rayblue"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/userTipTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_margin_parallel"
            android:text="@string/user"
            android:layout_marginTop="@dimen/login_margin_each_model"
            android:textSize="@dimen/login_text_size"
            android:textColor="@color/rayblue"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_height"
            android:layout_marginRight="@dimen/login_margin_parallel"
            android:layout_marginLeft="@dimen/login_margin_parallel">

            <EditText
                android:id="@+id/userEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/phoneOrEmail"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textSize="@dimen/login_text_size"
                android:textColorHint="@color/gray"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/rayblue"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/passwordTipTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_margin_parallel"
            android:text="@string/password"
            android:layout_marginTop="@dimen/login_margin_each_model"
            android:textSize="@dimen/login_text_size"
            android:textColor="@color/rayblue"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_height"
            android:layout_marginRight="@dimen/login_margin_parallel"
            android:layout_marginLeft="@dimen/login_margin_parallel" >

            <EditText
                android:id="@+id/passwordEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enterPassword"
                android:inputType="textPassword"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textSize="@dimen/login_text_size"
                android:textColorHint="@color/gray"/>

            <CheckBox
                android:id="@+id/lawsCb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/check_box_bg"
                android:button="@null"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/rayblue"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/login_margin_parallel"
            android:layout_marginLeft="@dimen/login_margin_parallel">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">
                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_button_corner"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:id="@+id/forgetTv"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/forget"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/lineBlue"
                        android:textSize="@dimen/login_text_size"/>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/login_edit_height"
                        android:background="@color/rayblue"/>
                    <TextView
                        android:id="@+id/registerTv"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/register"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/lineBlue"
                        android:textSize="@dimen/login_text_size"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:background="@color/gray1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_bg"
        android:layout_alignParentRight="true"/>

</RelativeLayout>

