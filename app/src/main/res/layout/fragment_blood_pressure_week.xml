<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_marginTop="@dimen/report_margin"
        android:layout_marginRight="@dimen/report_margin"
        android:layout_marginLeft="@dimen/report_margin"
        android:background="@drawable/bg_report_green">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/report_margin">

            <ImageView
                android:id="@+id/leftIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/report_icon_white_left"
                android:padding="17dp"/>

            <TextView
                android:id="@+id/dateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/report_text_size_small"
                android:textColor="@color/white"
                android:text="@string/today"/>

            <ImageView
                android:id="@+id/rightIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/report_icon_white_right"
                android:padding="17dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/sbp"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9ee6ef"
                android:layout_marginLeft="@dimen/report_margin"
                android:text="@string/dbp"
                android:textSize="13sp"/>

        </LinearLayout>

        <com.szip.sportwatch.View.ReportView
            android:id="@+id/tableView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/report_margin"
            android:layout_marginRight="@dimen/report_margin_table_parallel"
            android:layout_marginLeft="@dimen/report_margin_table_parallel"
            app:flag="4"
            app:is_bar="true"
            app:bar_bg_color="#6fc4ed"
            app:pross_color1="@color/white"
            app:pross_color2="#9ee6ef"
            app:data_number="7"
            app:text_color="@color/white"
            app:text_size="@dimen/report_text_size_table"
            app:x_value="true"
            app:x_value_num="7"
            app:y_value="true"
            app:y_value_num="6"
            app:maxVelue="90"
            app:bar_width="20dp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1.1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/br_shadow"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/report_margin"
            android:layout_marginLeft="@dimen/report_margin"
            android:background="@drawable/bg_item_normal">

            <RelativeLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/report_margin_parallel"
                android:layout_marginBottom="@dimen/report_margin_parallel">


                <TextView
                    android:id="@+id/sbpTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/rayblue"
                    android:textSize="@dimen/report_text_size_mid"
                    android:text="--mmHg"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sbpTv"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/report_text_size_small"
                    android:text="@string/averageSBP"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="45dp"
                android:background="@color/gray"
                android:layout_gravity="center_vertical"/>


            <RelativeLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/report_margin_parallel"
                android:layout_marginBottom="@dimen/report_margin_parallel">


                <TextView
                    android:id="@+id/dbpTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/rayblue"
                    android:textSize="@dimen/report_text_size_mid"
                    android:text="--mmHg"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbpTv"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/report_text_size_small"
                    android:text="@string/averageDBP"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>