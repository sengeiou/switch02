<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="170dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/me"
                android:layout_marginStart="@dimen/item_margin_parallel"
                android:textColor="@color/rayblue"
                android:textSize="@dimen/item_text_size"/>

            <RelativeLayout
                android:id="@+id/deviceLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/item_margin_parallel"
                android:layout_marginStart="@dimen/item_margin_parallel"
                android:background="@drawable/bg_mine_item"
                android:layout_marginTop="@dimen/item_margin_model_top">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_icon_device"
                    android:padding="@dimen/item_pad"/>

                <TextView
                    android:id="@+id/device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/device"
                    android:textColor="@color/rayblue"
                    android:textSize="@dimen/item_text_size"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/image" />


                <TextView
                    android:id="@+id/deviceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="13sp"
                    android:gravity="end"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/device"
                    android:layout_toStartOf="@+id/deviceNameTv"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="8dp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/deviceNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_text_size"
                    android:textColor="@color/blue"
                    android:layout_toStartOf="@id/arrow"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/item_margin_model_right" />

                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/item_margin_model_right"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/my_icon_arrow"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/stepPlanLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/item_margin_parallel"
                android:layout_marginStart="@dimen/item_margin_parallel"
                android:background="@drawable/bg_mine_item"
                android:layout_marginTop="@dimen/item_margin_model_top">


                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_icon_steps"
                    android:padding="@dimen/item_pad"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/stepPlan"
                    android:textColor="@color/rayblue"
                    android:textSize="@dimen/item_text_size"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/image1"/>

                <TextView
                    android:id="@+id/stepPlanTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/arrow1"
                    android:textColor="@color/rayblue"
                    android:textSize="@dimen/item_text_size"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/item_margin_model_right"/>

                <ImageView
                    android:id="@+id/arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/item_margin_model_right"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/my_icon_arrow"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sleepPlanLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/item_margin_parallel"
                android:layout_marginStart="@dimen/item_margin_parallel"
                android:background="@drawable/bg_mine_item"
                android:layout_marginTop="@dimen/item_margin_model_top">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_icon_sleep"
                    android:padding="@dimen/item_pad"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/sleepPlan"
                    android:textColor="@color/rayblue"
                    android:textSize="@dimen/item_text_size"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/image2"/>

                <TextView
                    android:id="@+id/sleepPlanTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/rayblue"
                    android:layout_toStartOf="@id/arrow2"
                    android:textSize="@dimen/item_text_size"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/item_margin_model_right"/>


                <ImageView
                    android:id="@+id/arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/item_margin_model_right"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/my_icon_arrow"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set"
                android:layout_marginStart="@dimen/item_margin_parallel"
                android:layout_marginTop="@dimen/item_margin_model_top"
                android:textColor="@color/rayblue"
                android:textSize="@dimen/item_text_size" />

            <RelativeLayout
                android:id="@+id/bodyFatLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/item_margin_parallel"
                android:layout_marginStart="@dimen/item_margin_parallel"
                android:background="@drawable/bg_mine_item"
                android:layout_marginTop="@dimen/item_margin_model_top">

                <ImageView
                    android:id="@+id/imageFat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_icon_bodyfatscal"
                    android:padding="@dimen/item_pad"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/body_fat"
                    android:textColor="@color/rayblue"
                    android:textSize="@dimen/item_text_size"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/imageFat"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/item_margin_model_right"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/my_icon_arrow"/>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/findLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/item_margin_parallel"
                android:layout_marginStart="@dimen/item_margin_parallel"
                android:background="@drawable/bg_mine_item"
                android:layout_marginTop="@dimen/item_margin_model_top">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_icon_findwatch"
                    android:padding="@dimen/item_pad"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/find"
                    android:textColor="@color/rayblue"
                    android:textSize="@dimen/item_text_size"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/image3"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/item_margin_model_right"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/my_icon_arrow"/>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/notificationLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/item_margin_parallel"
                android:layout_marginStart="@dimen/item_margin_parallel"
                android:background="@drawable/bg_mine_item"
                android:layout_marginTop="@dimen/item_margin_model_top">

                <ImageView
                    android:id="@+id/image9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_icon_inform"
                    android:padding="@dimen/item_pad"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/notification"
                    android:textColor="@color/rayblue"
                    android:textSize="@dimen/item_text_size"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/image9"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/item_margin_model_right"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/my_icon_arrow"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/blePhoneLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/item_margin_parallel"
                android:layout_marginStart="@dimen/item_margin_parallel"
                android:background="@drawable/bg_mine_item"
                android:layout_marginTop="@dimen/item_margin_model_top">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_icon_faq"
                    android:padding="@dimen/item_pad"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/FAQ"
                    android:textColor="@color/rayblue"
                    android:textSize="@dimen/item_text_size"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/image4"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/item_margin_model_right"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/my_icon_arrow"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/blePhotoLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/item_margin_parallel"
                android:layout_marginStart="@dimen/item_margin_parallel"
                android:background="@drawable/bg_mine_item"
                android:layout_marginTop="@dimen/item_margin_model_top">

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_icon_photo"
                    android:padding="@dimen/item_pad"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/blePhoto"
                    android:textColor="@color/rayblue"
                    android:textSize="@dimen/item_text_size"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/image5"/>

                <Switch
                    android:id="@+id/blePhotoSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/item_margin_model_right"
                    android:theme="@style/MySwitch"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/heartSwitchLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/item_margin_parallel"
                android:layout_marginStart="@dimen/item_margin_parallel"
                android:background="@drawable/bg_mine_item"
                android:layout_marginTop="@dimen/item_margin_model_top">

                <ImageView
                    android:id="@+id/imageSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_icon_hr"
                    android:padding="@dimen/item_pad"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/heart_switch"
                    android:textColor="@color/rayblue"
                    android:textSize="@dimen/item_text_size"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageSwitch"/>

                <Switch
                    android:id="@+id/heartSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/item_margin_model_right"
                    android:theme="@style/MySwitch"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/faceLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/item_margin_parallel"
                android:layout_marginStart="@dimen/item_margin_parallel"
                android:background="@drawable/bg_mine_item"
                android:layout_marginTop="@dimen/item_margin_model_top">

                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_icon_change"
                    android:padding="@dimen/item_pad"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/face"
                    android:textColor="@color/rayblue"
                    android:textSize="@dimen/item_text_size"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/image6"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/item_margin_model_right"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/my_icon_arrow"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/unitLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/item_margin_parallel"
                android:layout_marginStart="@dimen/item_margin_parallel"
                android:background="@drawable/bg_mine_item"
                android:layout_marginTop="@dimen/item_margin_model_top">

                <ImageView
                    android:id="@+id/image10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_icon_unit"
                    android:padding="@dimen/item_pad"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/unit"
                    android:textColor="@color/rayblue"
                    android:textSize="@dimen/item_text_size"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/image10"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/item_margin_model_right"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/my_icon_arrow"/>

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other"
                android:layout_marginStart="@dimen/item_margin_parallel"
                android:layout_marginTop="@dimen/item_margin_model_top"
                android:textColor="@color/rayblue"
                android:textSize="@dimen/item_text_size"/>

            <RelativeLayout
                android:id="@+id/aboutLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/item_margin_parallel"
                android:layout_marginStart="@dimen/item_margin_parallel"
                android:background="@drawable/bg_mine_item"
                android:layout_marginTop="@dimen/item_margin_model_top">

                <ImageView
                    android:id="@+id/image7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_icon_about"
                    android:padding="@dimen/item_pad"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/about"
                    android:textColor="@color/rayblue"
                    android:textSize="@dimen/item_text_size"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/image7"/>


                <View
                    android:id="@+id/updateView"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_red_circle"
                    android:layout_marginEnd="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/item_margin_model_right"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/my_icon_arrow"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/logoutLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/item_margin_parallel"
                android:layout_marginStart="@dimen/item_margin_parallel"
                android:background="@drawable/bg_mine_item"
                android:layout_marginTop="@dimen/item_margin_model_top">

                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_icon_logout"
                    android:padding="@dimen/item_pad"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/logout"
                    android:textColor="@color/rayblue"
                    android:textSize="@dimen/item_text_size"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/image8"/>
            </RelativeLayout>


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/userLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/my_head_bg"
        android:clickable="true">

        <com.szip.jswitch.View.CircularImageView
            android:id="@+id/pictureIv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/head"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            app:is_circular="true"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/userNameTv"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/rayblue"
                android:text="用户名"
                android:maxLines="1"/>

            <LinearLayout
                android:id="@+id/elcLl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/rayblue"
                    android:textSize="15sp"/>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="20dp"
                    android:background="@color/rayblue"
                    android:layout_marginStart="9dp"
                    android:layout_marginEnd="9dp"/>


                <ImageView
                    android:id="@+id/elcIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


</RelativeLayout>
