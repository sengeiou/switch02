<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DIYActivity"
    android:orientation="vertical">


    <include layout="@layout/title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_above="@+id/bottomRl">
            <ImageView
                android:id="@+id/diyIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/diy_06"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/background"
                android:textColor="@color/rayblue"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>


            <com.szip.sportwatch.View.CircularImageView
                android:id="@+id/backgroundIv_r"
                android:layout_width="155dp"
                android:layout_height="184dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                app:is_allRadius="true"
                app:radius="25dp"/>

            <com.szip.sportwatch.View.CircularImageView
                android:id="@+id/backgroundIv_c"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                app:is_circular="true"/>

            <ImageView
                android:id="@+id/clockIv"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomRl"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/rayblue"
                android:text="@string/clock"
                android:layout_above="@+id/clockRv"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/clockRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>



    </RelativeLayout>

</LinearLayout>