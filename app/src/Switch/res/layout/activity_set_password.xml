<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SetPasswordActivity"
    android:background="@color/bgColor">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="">

        <ImageView
            android:id="@+id/backIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/registor_icon_back"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setPassword"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/register_margin_each_model"
            android:textColor="@color/rayblue"
            android:textSize="26sp"/>

        <TextView
            android:id="@+id/passwordTipTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/password"
            android:layout_marginTop="@dimen/reset_margin_each_model"
            android:textSize="@dimen/reset_text_size"
            android:textColor="@color/rayblue"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/login_bg_edit"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/passwordEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enterPassword"
                android:inputType="textPassword"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textSize="@dimen/reset_text_size"
                android:textColorHint="@color/gray"
                android:layout_marginStart="15dp"
                android:layout_toStartOf="@id/lawsCb"/>

            <CheckBox
                android:id="@+id/lawsCb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/check_box_bg"
                android:button="@null"
                android:layout_marginEnd="15dp"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/confirmPasswordTipTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/confirmPassword"
            android:layout_marginTop="@dimen/reset_margin_each_model"
            android:textSize="@dimen/reset_text_size"
            android:textColor="@color/rayblue"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/login_bg_edit"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/confirmPasswordEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enterPasswordAgain"
                android:inputType="textPassword"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textSize="@dimen/reset_text_size"
                android:textColorHint="@color/gray"
                android:layout_marginStart="15dp"
                android:layout_toStartOf="@id/lawsCb1"/>

            <CheckBox
                android:id="@+id/lawsCb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/check_box_bg"
                android:button="@null"
                android:layout_marginEnd="15dp"/>

        </RelativeLayout>




        <Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/register"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_corner"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="15sp"/>


    </LinearLayout>


</RelativeLayout>
